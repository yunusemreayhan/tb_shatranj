{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "remove tables",
            "type": "shell",
            "command": "rm -f *.rtbw *.rtbz *.txt",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "bear -- make all",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "bear -- make clean all",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "dependsOn": [
                "remove tables"
            ]
        },
        {
            "label": "regenerate",
            "type": "shell",
            "command": "",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "dependsOn": [
                "rebuild",
                "generate common"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "dependsOn": [
                "build",
                "generate common"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "generate common",
            "type": "shell",
            "command": "perl run.pl --generate --min 3 --max 4 --disk --threads=16",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
