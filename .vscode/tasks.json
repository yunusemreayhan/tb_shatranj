{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bear -- make all",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "bear -- make clean all",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "regenerate",
            "type": "shell",
            "command": "perl run.pl --generate --min 3 --max 5 --disk --log --threads=3",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "dependsOn": [
                "rebuild"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "perl run.pl --generate --min 3 --max 5 --disk --log",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
